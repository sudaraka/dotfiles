chdir $PROJECTSDIR/adhesion/ecommerce-client

screen -t 'Webpack Builder' bash --rcfile $HOME/.profiles/aecli/buildrc
screen -t 'Web Server' bash --rcfile $HOME/.profiles/aecli/webrc
screen -t 'API Server' bash --rcfile $HOME/.profiles/aecli/apirc

screen -t Command bash --rcfile $HOME/.profiles/aecli/commandrc
