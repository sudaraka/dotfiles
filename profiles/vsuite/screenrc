source $HOME/.screenrc

chdir $PROJECTSDIR/vcreative/vsuite

screen -t server bash --rcfile $HOME/.profiles/vsuite/serverrc
split
resize 10
focus down

screen -t command bash --rcfile $HOME/.profiles/vsuite/commandrc
