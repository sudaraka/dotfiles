source $HOME/.screenrc

chdir $PROJECTSDIR/vcreative/PPOv2

screen -t 'Web Browser' bash --rcfile $HOME/.profiles/ppo2/browserrc

screen -t 'Web Server' bash --rcfile $HOME/.profiles/ppo2/httprc

screen -t 'Command' bash --rcfile $HOME/.profiles/ppo2/commandrc
