source $HOME/.screenrc

chdir $PROJECTSDIR/miracle-sealants

screen -t 'Web Server' bash --rcfile $HOME/.profiles/bashrc/msc.web

screen -t 'Live Reload Server' bash --rcfile $HOME/.profiles/bashrc/msc.watch

screen -t command bash --rcfile $HOME/.profiles/bashrc/msc.command
