source $HOME/.screenrc

chdir $PROJECTSDIR/miracle-sealants

screen -t 'Web Server' bash --rcfile $HOME/.profiles/msc/serverrc

screen -t 'Live Reload Server' bash --rcfile $HOME/.profiles/msc/watchrc

screen -t command bash --rcfile $HOME/.profiles/msc/commandrc
