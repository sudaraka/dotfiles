source $HOME/.screenrc

chdir $PROJECTSDIR/radiators-warehouse/web

setenv PATH $PATH:$PROJECTSDIR/radiators-warehouse/web/bin

split
resize 10
screen -t watch bash --rcfile $HOME/.profiles/bashrc/rad.watch

focus down
screen -t command bash --rcfile $HOME/.profiles/bashrc/rad.command
