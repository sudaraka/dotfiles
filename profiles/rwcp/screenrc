source $HOME/.screenrc

chdir $PROJECTSDIR/radiators/rw-customer-portal

split
resize 10
screen -t Server bash --rcfile $HOME/.profiles/rwcp/serverrc

focus down
screen -t Command bash --rcfile $HOME/.profiles/rwcp/commandrc
