source $HOME/.screenrc

chdir $PROJECTSDIR/radiators/radiators-warehouse/web

setenv PATH $PATH:$PROJECTSDIR/radiators/radiators-warehouse/web/bin

split
resize 10
screen -t watch bash --rcfile $HOME/.profiles/rws/watchrc

focus down
screen -t command bash --rcfile $HOME/.profiles/rws/commandrc
