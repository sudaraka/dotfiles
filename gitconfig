[alias]
    a                   = add -p
    ad                  = add
    b                   = branch
    bl                  = branch -vv
    c                   = commit -e
    ca                  = commit -ae
    cf                  = commit --fixup
    ch                  = checkout
    cm                  = commit --amend --no-edit
    cp                  = cherry-pick -x
    d                   = diff --no-ext-diff
    di                  = diff --no-ext-diff --staged
    f                   = fetch
    fa                  = fetch --all
    l                   = log --graph --decorate=short --oneline --all --date-order --format=format:'%C(green)%h%C(dim green) %G?%C(reset)%C(auto)%d%C(reset) %C(white)%s%C(reset)'
    l1                  = log -1 --stat --decorate=short
    ll                  = log --graph --decorate=short --oneline --all --date-order --date=short --format=format:'%C(green)%h%C(dim green) %G?%C(reset) %C(yellow)%ad%C(reset)%C(auto)%d%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
    lx                  = log --graph --decorate=short --stat --date-order --show-signature
    m                   = merge --no-ff
    mff                 = merge --ff-only
    ph                  = push
    pl                  = pull
    r                   = reset
    rb                  = rebase
    rbhm                = rebase HEAD master
    rbc                 = rebase --continue
    rbs                 = rebase --skip
    rh                  = reset --hard
    rs                  = reset --soft
    rv                  = revert
    s                   = status -sb
    sa                  = stash apply
    sc                  = stash clear
    sl                  = stash list --format=format:'%C(blue)%gd%C(reset) %C(white)%s%C(reset)'
    sp                  = stash pop
    ss                  = stash save
[push]
    default             = simple
    followTags          = true
