[core]
    editor          = vim
[user]
    name            = Sudaraka Wijesinghe
    email           = sudaraka@sudaraka.org
    signingkey      = 14A657B6
[color]
    branch          = auto
    diff            = auto
    sh              = auto
    status          = auto
    ui              = true
[alias]
    a               = add
    ai              = add -i
    ap              = add -p
    b               = branch
    bl              = branch -vv
    c               = commit -e
    ca              = commit -ae
    ch              = checkout
    cp              = cherry-pick -x
    d               = diff --no-ext-diff
    ds              = diff --no-ext-diff --staged
    f               = fetch
    fom             = fetch origin master
    l               = log --graph --decorate=short --oneline --all --format=format:'%C(green)%h%C(reset)%C(auto)%d%C(reset) %C(white)%s%C(reset)'
    ll              = log --graph --decorate=short --oneline --all --date=short --format=format:'%C(green)%h%C(reset) %C(yellow)%ad%C(reset)%C(auto)%d%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
    lx              = log --graph --decorate=short --stat
    m               = merge
    mff             = merge --ff-only
    mnf             = merge --no-ff
    ph              = push
    pl              = pull
    r               = reset
    rb              = rebase
    rh              = reset --hard
    rv              = revert
    s               = status -sb
    sl              = status
    st              = stash
[push]
    default         = simple
[merge]
    tool            = splice
[mergetool]
    prompt          = false
[mergetool "splice"]
    cmd             = "gvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode   = true
[diff]
    external        = git_vimdiff.sh
[difftool]
    prompt          = false
[color "sh"]
    branch          = yellow
    dirty           = red bold
    dirty-stash     = red
    repo-state      = blue
    upstream-state  = cyan
[rebase]
	autosquash = true
