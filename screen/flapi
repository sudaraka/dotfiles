# flapi: GNU Screen profile for Family Legacy API development
# Authors: [Sudaraka Wijesinghe](https://sudaraka.org/contact)
# Source: https://github.com/sudaraka/dotfiles/blob/master/screen/flapi
# License: CC-BY
#

source $HOME/.screenrc

chdir $PROJECTSDIR/family-legacy-api/

setenv PATH $PATH:$PROJECTSDIR/family-legacy-api/bin

split
resize 10
screen -t Server bash --rcfile $HOME/.screen/bashrc/flapi.server

split -v
focus right
screen -t 'Celery logs' bash --rcfile $HOME/.screen/bashrc/flapi.celery

split -v
focus right
screen -t 'SMTP logs' bash --rcfile $HOME/.screen/bashrc/flapi.smtp

focus down
screen -t Command bash --rcfile $HOME/.screen/bashrc/flapi.command
