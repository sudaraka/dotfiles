#

source $HOME/.screenrc

chdir $PROJECTSDIR/family-legacy-api/

setenv PATH $PATH:$PROJECTSDIR/family-legacy-api/bin

screen -t grunt bash --rcfile $HOME/.screen/bashrc/flapi.grunt

split
resize 10
screen -t server bash --rcfile $HOME/.screen/bashrc/flapi.server

focus down
screen -t command bash --rcfile $HOME/.screen/bashrc/flapi.command
