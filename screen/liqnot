source $HOME/.screenrc

chdir $PROJECTSDIR/liqnot/src

split -v
screen -t command bash --rcfile $HOME/.screen/bashrc/liqnot.command

focus right
screen -t server bash --rcfile $HOME/.screen/bashrc/liqnot.server

focus left
