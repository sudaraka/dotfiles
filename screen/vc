source $HOME/.screenrc

chdir /var/disk2/projects/vcreative/ppo_symfony_base

split -v
split

focus right
screen -t server bash --rcfile $HOME/.screen/bashrc/vc.server

focus left
focus down
screen -t command bash --rcfile $HOME/.screen/bashrc/vc.command

focus top
screen -t remote ssh vcsb

focus right
