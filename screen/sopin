source $HOME/.screenrc

chdir /var/disk2/projects/sopin/sopin-web/

split -v
screen -t command bash --rcfile $HOME/.screen/bashrc/sopin.command

focus right
screen -t server bash --rcfile $HOME/.screen/bashrc/sopin.server

focus left
