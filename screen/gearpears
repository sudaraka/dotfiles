source $HOME/.screenrc

chdir $PROJECTSDIR/gearpeers

setenv PATH $PATH:$PROJECTSDIR/gearpeers/bin

split
resize 10
screen -t watch bash --rcfile $HOME/.screen/bashrc/gearpeers.watch

focus down
screen -t command bash --rcfile $HOME/.screen/bashrc/gearpeers.command
