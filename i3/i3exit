#!/bin/sh

case "$1" in
    logout)
        i3-msg exit;
        ;;
    reboot)
        systemctl reboot;
        ;;
    shutdown)
        systemctl poweroff;
        ;;
    reboot-server)
        sudo umount -a -t nfs
        ssh homesvr sudo systemctl reboot
        ;;
    shutdown-server)
        sudo umount -a -t nfs
        ssh homesvr sudo systemctl poweroff
        ;;
    test)
        notify-send -i ~/scripts/archlinux-install/archicon.png 'i3wm' 'test';
        ;;
    *)
        exit 2;
esac;

exit 0;
